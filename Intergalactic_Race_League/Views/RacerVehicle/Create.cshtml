@model Intergalactic_Race_League.Models.RacerVehicle
<h2>Create Racer and Vehicle</h2>
<form asp-action="Create" method="post">
    <h3>Racer Details</h3>
    <div>
        <label asp-for="Racer.DriverName" class="control-label"></label>
        <input asp-for="Racer.DriverName" class="form-control" required />
        <span asp-validation-for="Racer.DriverName" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Racer.DriverAge" class="control-label"></label>
        <input asp-for="Racer.DriverAge" class="form-control" required />
        <span asp-validation-for="Racer.DriverAge" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Racer.DriverHeightInCm" class="control-label"></label>
        <input asp-for="Racer.DriverHeightInCm" class="form-control" required />
        <span asp-validation-for="Racer.DriverHeightInCm" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Racer.DriverCountry" class="control-label"></label>
        <input asp-for="Racer.DriverCountry" class="form-control" required />
        <span asp-validation-for="Racer.DriverCountry" class="text-danger"></span>
    </div>
    <h3>Vehicle Details</h3>
    <div>
        <label asp-for="Vehicle.Model" class="control-label"></label>
        <input asp-for="Vehicle.Model" class="form-control" required />
        <span asp-validation-for="Vehicle.Model" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Vehicle.Type" class="control-label"></label>
        <input asp-for="Vehicle.Type" class="form-control" required />
        <span asp-validation-for="Vehicle.Type" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
